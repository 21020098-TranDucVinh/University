<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Donation10"
        tools:targetApi="31">
        <activity
            android:name=".views.MainActivity"
            android:exported="false" />
        <activity
            android:name=".compose.ComposeQuadrantActivity"
            android:exported="false"
            android:label="@string/title_activity_compose_quadrant"
            android:theme="@style/Theme.Donation10" />
        <activity
            android:name=".compose.TaskCompletedActivity"
            android:exported="false"
            android:label="@string/title_activity_task_completed"
            android:theme="@style/Theme.Donation10" />
        <activity
            android:name=".compose.PostComposeActivity"
            android:exported="false"
            android:label="@string/title_activity_post_compose"
            android:theme="@style/Theme.Donation10" />
        <activity
            android:name=".compose.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Donation10">

        </activity>
        <activity
            android:name=".views.Donate"
            android:exported="true"
            android:label="Donation"
            android:theme="@style/Theme.Donation10">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>